{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "OpenOCD",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                ".embedded/openocd.cfg"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Info |Warn |Error):(.*)$",
                    "severity": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Open On-Chip Debugger.*",
                    "endsPattern": ".*watchpoints.*"
                }
            },
            "presentation": {
                "reveal": "always"
            },
            "isBackground": true
        },
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build"
        }
    ]
}